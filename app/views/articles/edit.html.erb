<h2> Edit existing Article </h2>

<% if @article.errors.any? %>
<h2> The following errors prevent the article from getting created</h2>
 
<ul>
    <% @article.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
    <%end%>
</ul>
<%end%>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :Title %><br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :Description %><br>
        <%= f.text_area :description%>
    </p>

    <p>
        <%= f.submit %>
    </p>
<%end%>
<%= link_to 'Go Back', articles_path%>