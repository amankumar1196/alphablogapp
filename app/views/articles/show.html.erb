<div class="card col-md-10 offset-1">
    <h3 class="p-3 text-center card-title text-info border-bottom border-secondary"> 
        <%= @article.title %>
    </h3>
    
    <div class="card-body">
        <%= simple_format(@article.description) %>
        <% if @article.user %>
        <ul class="listing">
            <div class="row">
                <div class="col-md-12 pt-4">
                    <li class="article-title">
                        <small>Author : <%= link_to @article.user.username, user_path(@article.user) %>
                        </small>
                    </li>
                </div>
            </div>
        </ul>
        <%end%>
    </div>
</div>

<div class="article-actions">
    <%= link_to 'Go Back', articles_path, class:"btn btn-md btn-success offset-1"%>
    <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
    <%= link_to 'Delete', article_path(@article),
                            method: :delete, 
                            data: {confirm: "Are you sure? "}, 
                            class:"btn btn-md btn-danger offset-7"%>
    <%= link_to 'Edit Article', edit_article_path(@article), class:"btn btn-md btn-info"%> 
    <%end%>
</div>
</div>