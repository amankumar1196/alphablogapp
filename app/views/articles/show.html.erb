<div class="card col-md-10 offset-1">
    <h3 class="p-3 text-center card-title text-info"> 
        <%= @article.title %>
    </h3>
    
    <div class="card-body">
        <%= simple_format(@article.description) %>
    </div>
</div>

<div class="article-actions">
    <%= link_to 'Go Back', articles_path, class:"btn btn-md btn-success offset-1"%>
    <%= link_to 'Delete', article_path(@article), 
                            method: :delete, 
                            data: {confirm: "Are you sure? "}, 
                            class:"btn btn-md btn-danger offset-7"%>
    <%= link_to 'Edit Article', edit_article_path(@article), class:"btn btn-md btn-info"%> 
</div>
</div>