<% if obj.errors.any? %>
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card bgerror text-danger">
            <div class="card-header">
                <h5 class="card-title">
                The following errors prevent the article from getting created:
                <%= pluralize(obj.errors.count,"error")%>
                </h5>
                    <div class="card-body">
                        <ul>
                            <% obj.errors.full_messages.each do |msg|%>
                                <li><%= msg %></li>
                            <%end%>
                        </ul>
                    </div>
            </div>
        </div>
    </div>
</div>
<br/>
<%end%>