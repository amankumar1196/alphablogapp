
<%= render 'shared/errors', obj: @user%>
    <div class="col-xs-12">
        <%= form_for @user do |f| %>
            <div class="form-group row">
                <div class="control-label col-sm-2">
                    <%= f.label :Username %>
                </div>
                <div class="col-sm-8">
                <%= f.text_field :username, class:"form-control", placeholder:"Enter username", autofocus: true %>
                </div>
            </div>

            <div class="form-group row">
                <div class="control-label col-sm-2">
                    <%= f.label :Email %>
                </div>
                <div class="col-sm-8">
                    <%= f.email_field :email, class:"form-control", placeholder: "Enter email", autofocus:true %>
                </div>
            </div>

            <div class="form-group row">
                <div class="control-label col-sm-2">
                    <%= f.label :Password %>
                </div>
                <div class="col-sm-8">
                    <%= f.password_field :password, class:"form-control", placeholder: "Enter password", autofocus:true %>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-12">
                <%= link_to 'CANCEL', user_path(current_user), class:'btn btn-danger btn-md offset-5 mr-3'%>
                <%= f.submit(@user.new_record? ? "SUBMIT" : "UPDATE", class:'btn btn-success btn-md')%>
                </div>
            </div>

        <% end %>
        
    </div>